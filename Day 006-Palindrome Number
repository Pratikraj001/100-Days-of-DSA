// ( --- https://leetcode.com/problems/palindrome-number/ --- )

// 9.Palindrome Number [LEET CODE]

Time complexity :- O( n ) ;

class Solution {
    public boolean isPalindrome(int x) {
    String str = String.valueOf(x);
        int start = 0;
        int end = str.length() - 1 ;
        while (start < end){
            if (str.charAt(start++) != str.charAt(end--))
                return false;
        }
        return true;
    }
}    
    
